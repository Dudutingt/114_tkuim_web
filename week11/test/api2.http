import express from "express";
import { ObjectId } from "mongodb";
import { getDB } from "../utils/db.js";

const router = express.Router();

// 建立報名 (CREATE)
router.post("/", async (req, res) => {
  try {
    const db = getDB();
    const result = await db.collection("signup").insertOne(req.body);
    res.status(201).json({ message: "報名成功", id: result.insertedId });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Server Error" });
  }
});

// 取得所有報名 (READ)
router.get("/", async (req, res) => {
  try {
    const db = getDB();
    const list = await db.collection("signup").find().toArray();
    res.json(list);
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Server Error" });
  }
});

// 更新報名 (UPDATE)
router.patch("/:id", async (req, res) => {
  try {
    const db = getDB();
    const result = await db.collection("signup").updateOne(
      { _id: new ObjectId(req.params.id) },
      { $set: req.body }
    );
    res.json({ message: "更新成功", modified: result.modifiedCount });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Server Error" });
  }
});

// 刪除整筆報名 (DELETE)
router.delete("/:id", async (req, res) => {
  try {
    const db = getDB();
    const result = await db
      .collection("signup")
      .deleteOne({ _id: new ObjectId(req.params.id) });

    if (result.deletedCount === 0) {
      return res.status(404).json({ error: "找不到要刪除的資料" });
    }

    res.json({ message: "刪除成功", deleted: result.deletedCount });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Server Error" });
  }
});

export default router;
